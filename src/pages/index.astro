---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import Reviews from '../components/Reviews.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';

const title = "Mark's Property Services - Stourbridge Handyman | No Job Too Small";
const description = "Professional handyman services in Stourbridge. Established over 10 years, Mark provides quality building work, painting, decorating and general DIY services.";
---

<Layout title={title} description={description}>
  <Header />
  <main>
    <Hero />
    <Services />
    <Reviews />
    <Contact />
  </main>
  <Footer />
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
