---
import { reviews, averageRating, totalReviews } from '../data/reviews';
import Star from './icons/Star.astro';
---

<section id="reviews" class="py-20 px-6 bg-white">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-slate-900 mb-4">Customer Reviews</h2>
      <div class="flex items-center justify-center space-x-2 mb-4">
        <div class="flex">
          {[...Array(5)].map((_, i) => (
            <Star 
              class={i < Math.floor(averageRating) ? 'w-6 h-6 text-yellow-400 fill-current' : 'w-6 h-6 text-gray-300'}
              filled={i < Math.floor(averageRating)}
            />
          ))}
        </div>
        <span class="text-2xl font-bold text-slate-900">{averageRating}</span>
        <span class="text-slate-600">({totalReviews} review{totalReviews !== 1 ? 's' : ''})</span>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {reviews.map((review) => (
        <div class="bg-slate-50 rounded-xl p-6 card-shadow">
          <div class="flex items-start space-x-4 mb-4">
            <div class="w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold">
              {review.avatar || review.author.charAt(0)}
            </div>
            <div>
              <h4 class="font-semibold text-slate-900">{review.author}</h4>
          <div class="flex items-center space-x-1">
            {[...Array(5)].map((_, i) => (
              <Star 
                class={i < review.rating ? 'w-4 h-4 text-yellow-400 fill-current' : 'w-4 h-4 text-gray-300'} 
                filled={i < review.rating}
              />
            ))}
          </div>              <p class="text-sm text-slate-600">{review.date}</p>
            </div>
          </div>
          <p class="text-slate-700 leading-relaxed">{review.text}</p>
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <a 
        href="https://www.google.com/maps/place/Marks+Property+Services/@52.4559487,-2.1656476,15z/data=!4m6!3m5!1s0x487091c453f5b9d9:0x6c988181a8463bf5!8m2!3d52.4559487!4d-2.1656476!16s%2Fg%2F11gb3ys16s"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition-colors"
      >
        View on Google Maps
      </a>
    </div>
  </div>
</section>